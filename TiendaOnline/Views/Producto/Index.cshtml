@model IEnumerable<TiendaOnline.Models.Producto>;
@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Productos</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Nuevo Producto
            </a>
        </div>
    </div>
    <br/>
    @if(Model?.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre Producto</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                    <th>Tipo Aplicación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreProducto</td>
                        <td>@item.Precio</td>
                        <td>@item.Categoria.NombreCategoria</td>
                        <td>@item.TipoAplicacion.Nombre</td>
                        <td  class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Producto" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                    @*Editar*@
                                </a>
                                <a asp-controller="Producto" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger" mx-2>
                                    <i class="fas fa-trash"></i>
                                    @*Eliminar*@
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No se encontraron registros en la tabla</p>
    }
</div>