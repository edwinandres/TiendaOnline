@model TiendaOnline.Models.Categoria;
@{
    ViewData["Tile"] = "Eliminar Categoria";
}


<form method="post" asp-action="Delete">

    <input asp-for="Id" type="hidden"/>

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">
                <h1>Confirma que desea eliminar</h1>

            </h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label"></label>
                    <input asp-for="NombreCategoria" class="form-control" />                   
                </div>
            </div>
             <div class="row">
                <div class="col-md-6">
                    <label asp-for="MostrarOrden" class="form-label"></label>
                    <input asp-for="MostrarOrden" class="form-control" />                    
                </div>
            </div>
            <br/>
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ <partial name="_ValidationScriptsPartial"/> }
}